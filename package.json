{
  "name": "go-remote-debugger",
  "displayName": "Go Remote Debugger",
  "files": [
    "images/icon.png",
    "out/",
    "package.json",
    "README.md"
  ],
  "description": "A VSCode extension for remote Go debugging with dlv on remote servers",
  "version": "1.0.4",
  "publisher": "liwei0831",
  "icon": "images/icon.png",
  "keywords": [
    "go",
    "debugging",
    "remote",
    "dlv",
    "golang"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lwydyby/go-remote-debugger.git"
  },
  "galleryBanner": {
    "color": "#007acc",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug",
    "onCommand:dlv-debug.startDebugging"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dlv-debug.startDebugging",
        "title": "Start Server Remote Debugging"
      }
    ],
    "debuggers": [
      {
        "type": "dlv-remote",
        "label": "Server Remote Debug",
        "program": "./out/debugProvider.js",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "host": {
                "type": "string",
                "description": "Remote host to connect to"
              },
              "port": {
                "type": "number",
                "description": "Port to connect to"
              },
              "servername": {
                "type": "string",
                "description": "Server name for Server"
              },
              "remotePath": {
                "type": "string",
                "description": "Remote path to the binary"
              },
              "cwd": {
                "type": "string",
                "description": "Current working directory"
              },
              "mainPath": {
                "type": "string",
                "description": "Path to main function directory, relative to workspace"
              },
              "isSubProject": {
                "type": "boolean",
                "description": "Whether this is a sub-project. Sub-projects use workspace/servername as project directory"
              },
              "serverPath": {
                "type": "string",
                "description": "Remote server path for binary deployment"
              },
              "args": {
                "type": "string",
                "description": "Arguments to pass to the program"
              },
              "env": {
                "type": "array",
                "description": "Environment variables to set"
              },
              "buildArgs":{
                "type": "string",
                "description": "Build arguments"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Server Remote Debug",
            "type": "dlv-remote",
            "request": "launch",
            "host": "",
            "port": 40002,
            "servername": "",
            "remotePath": "",
            "mainPath": "${workspaceFolder}/cmd",
            "isSubProject": "",
            "cwd": "${workspaceFolder}"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Go Remote Debugger",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^5.9.2"
  }
}
